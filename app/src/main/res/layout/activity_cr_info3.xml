<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team.android.CrInfo3Activity">

    <!--header-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_header_fonacot" />
    </TableRow>
    <!--div-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- just draw a red line -->
        <View
            android:layout_height="5dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#007a33" />

        <View
            android:layout_height="5dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ffffff" />

        <View
            android:layout_height="5dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ba0c2f" />
    </TableRow>
    <!--content-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:srcCompat="@drawable/img_nino" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            app:srcCompat="@drawable/img_cr_dialogo3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:src="@drawable/ic_siguiente" />

    </TableRow>
    <!--div-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#007a33" />

        <View
            android:layout_height="2dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ffffff" />

        <View
            android:layout_height="2dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ba0c2f" />
    </TableRow>


    <!--footer-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">


        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_menu" />
    </TableRow>
</TableLayout>