<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!--header-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_header_fonacot" />
    </TableRow>
    <!--div-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- just draw a red line -->
        <View
            android:layout_height="5dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#007a33" />

        <View
            android:layout_height="5dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ffffff" />

        <View
            android:layout_height="5dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ba0c2f" />
    </TableRow>
    <!--content-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="8">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="53dp"
                android:layout_marginStart="67dp"
                app:srcCompat="@drawable/img_nino" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="65dp"
                android:layout_toEndOf="@+id/imageView2"
                app:srcCompat="@drawable/img_cr_dialogo_juego" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="299dp"
                android:layout_toEndOf="@+id/imageView3"
                app:srcCompat="@drawable/img_cr_salida" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView5"
                android:layout_below="@+id/imageView5"
                android:layout_marginEnd="21dp"
                app:srcCompat="@drawable/img_cr_casilla1" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView6"
                android:layout_below="@+id/imageView6"
                app:srcCompat="@drawable/img_cr_casilla2" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView7"
                android:layout_below="@+id/imageView7"
                app:srcCompat="@drawable/img_cr_casilla3" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7"
                android:layout_toStartOf="@+id/imageView7"
                app:srcCompat="@drawable/img_cr_casilla4" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView9"
                android:layout_toStartOf="@+id/imageView9"
                app:srcCompat="@drawable/img_cr_casilla5" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView10"
                android:layout_toStartOf="@+id/imageView10"
                app:srcCompat="@drawable/img_cr_casilla6" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView11"
                android:layout_toStartOf="@+id/imageView10"
                app:srcCompat="@drawable/img_cr_casilla7" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView12"
                android:layout_alignEnd="@+id/imageView12"
                app:srcCompat="@drawable/img_cr_casilla8" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView13"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/img_cr_casilla9" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView14"
                android:layout_alignStart="@+id/imageView14"
                app:srcCompat="@drawable/img_cr_casilla10" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView15"
                android:layout_alignStart="@+id/imageView15"
                app:srcCompat="@drawable/img_cr_casilla11" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView16"
                android:layout_toEndOf="@+id/imageView16"
                app:srcCompat="@drawable/img_cr_casilla12" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_cr_casilla13"
                android:layout_alignTop="@+id/imageView17"
                android:layout_toEndOf="@+id/imageView17" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView18"
                android:layout_toEndOf="@+id/imageView18"
                app:srcCompat="@drawable/img_cr_casilla14" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView19"
                android:layout_toEndOf="@+id/imageView19"
                app:srcCompat="@drawable/img_cr_casilla15" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView20"
                android:layout_toEndOf="@+id/imageView20"
                app:srcCompat="@drawable/img_cr_casilla16" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView21"
                android:layout_below="@+id/imageView21"
                app:srcCompat="@drawable/img_cr_casilla17" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView22"
                android:layout_below="@+id/imageView22"
                app:srcCompat="@drawable/img_cr_casilla18" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toEndOf="@+id/imageView23"
                app:srcCompat="@drawable/img_cr_casilla19" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView24"
                android:layout_toEndOf="@+id/imageView24"
                app:srcCompat="@drawable/img_cr_casilla20" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_cr_casilla21"
                android:layout_below="@+id/imageView5"
                android:layout_toEndOf="@+id/imageView24" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_cr_meta"
                android:layout_below="@+id/imageView26"
                android:layout_alignStart="@+id/imageView24"
                android:layout_marginStart="50dp" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_cr_dado1"
                android:layout_alignBottom="@+id/imageView20"
                android:layout_toEndOf="@+id/imageView27" />
        </RelativeLayout>
    </TableRow>
    <!--div-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#007a33" />

        <View
            android:layout_height="2dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ffffff" />

        <View
            android:layout_height="2dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#ba0c2f" />
    </TableRow>

    <!--footer-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_menu" />
    </TableRow>
</TableLayout>


