<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:transitionGroup="true">


    <!--header-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo"
            android:src="@drawable/img_header_fonacot" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- just draw a red line -->
        <View
            android:layout_width="0dp"
            android:layout_height="5dip"
            android:layout_weight="1"
            android:background="#007a33" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dip"
            android:layout_weight="1"
            android:background="#ffffff" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dip"
            android:layout_weight="1"
            android:background="#ba0c2f" />
    </TableRow>

    <!-- content -->

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/CrBn201"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_welcome"
            android:textAlignment="center"
            android:textSize="55sp" />

    </TableRow>

    <TableLayout>

        <TableRow xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="16"
            tools:ignore="UselessParent">

            <View android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@string/nino"
                app:srcCompat="@drawable/img_nino" />

            <View android:layout_weight="1" />

            <ImageButton
                android:id="@+id/img_btn_menu_credito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:contentDescription="@string/btn_credito"
                android:gravity="center"
                app:srcCompat="@drawable/ic_menucredito" />

            <View android:layout_weight="1" />

            <ImageButton
                android:id="@+id/img_btn_menu_interes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:contentDescription="@string/btn_intereses"
                android:gravity="center"
                app:srcCompat="@drawable/ic_menuintereses" />

            <View android:layout_weight="1" />

            <ImageButton
                android:id="@+id/img_btn_menu_presupuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:contentDescription="@string/btn_presupuesto"
                android:gravity="center"
                app:srcCompat="@drawable/ic_menupresupuesto" />

            <View android:layout_weight="1" />

            <ImageButton
                android:id="@+id/img_btn_menu_sobre_endeudamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:contentDescription="@string/btn_sobre_endeudamiento"
                android:gravity="center"
                app:srcCompat="@drawable/ic_endeudamiento" />

            <View android:layout_weight="1" />

        </TableRow>

    </TableLayout>


</TableLayout>
